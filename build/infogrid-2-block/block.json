    "items": {
      "type": "array",
      "default": [
        {
          "id": 1,
          "icon": "bi bi-lightning-charge",
          "title": "Fast Performance",
          "text": "Experience blazing fast speeds with our optimized engine."
        },
        {
          "id": 2,

          "bottom": "60px",
          "left": "40px"
        },
        "smallLaptop": {
          "top": "80px",
          "right": "60px",
          "bottom": "80px",
          "left": "60px"
        },
        "desktop": {
          "top": "100px",
          "right": "80px",
          "bottom": "100px",
          "left": "80px"
        },
        "bigDesktop": {
          "top": "100px",
          "right": "80px",
          "bottom": "100px",
          "left": "80px"
        }
      }
    }
  },

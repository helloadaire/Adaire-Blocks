    "blockId": {
      "type": "string",
      "default": ""
    },
    "postsPerPage": {
      "type": "number",
      "default": 6
    },
    "enablePagination": {
      "type": "boolean",
      "default": false
    },
    "paginationStyle": {
      "type": "string",
      "default": "numbers"
    },
    "selectedCategories": {
      "type": "array",
      "default": []
    },
    "selectedPosts": {
      "type": "array",
      "default": []
    },
    "postType": {
      "type": "string",
      "default": "post"
    },
    "excludeCurrentPost": {
      "type": "boolean",
      "default": true
    },
    "showCategories": {
      "type": "boolean",
      "default": true
    },
    "showDate": {
      "type": "boolean",
      "default": true
    },
    "showAuthor": {
      "type": "boolean",
      "default": true

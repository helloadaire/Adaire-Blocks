      }
    },
    "marginBottom": {
      "type": "object",
      "default": {
        "desktop": 0,
        "tablet": 0,
        "mobile": 0
      }
    },
    "marginLeft": {
      "type": "object",
      "default": {
        "desktop": 0,
        "tablet": 0,
        "mobile": 0
      }
    }

{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "create-block/flipcard-block",
  "version": "0.1.0",
  "title": "Flip Card",
  "category": "widgets",
  "icon": "admin-page",
  "description": "A card that flips on hover, allowing you to add blocks on both the front and back sides.",
  "example": {},
  "supports": {
    "html": false,
    "anchor": true,
    "customClassName": true,
    "align": [
      "wide",
      "full"
    ]
  },
  "textdomain": "flipcard-block",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "attributes": {
    "blockId": {
      "type": "string",
      "default": ""
    },
    "width": {
      "type": "object",
      "default": {
        "desktop": {
          "value": 300,
          "unit": "px"
        },
        "tablet": {
          "value": 100,
          "unit": "%"
        },
        "mobile": {
          "value": 100,
          "unit": "%"
        }
      }
    },
    "height": {
      "type": "object",
      "default": {
        "desktop": {
          "value": 300,
          "unit": "px"
        },
        "tablet": {
          "value": 300,
          "unit": "px"
        },
        "mobile": {
          "value": 250,
          "unit": "px"
        }
      }
    },
    "flipDirection": {
      "type": "string",
      "default": "horizontal"
    },
    "animationDuration": {
      "type": "number",
      "default": 0.6
    },
    "animationEasing": {
      "type": "string",
      "default": "ease-in-out"
    },
    "frontBackgroundColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "backBackgroundColor": {
      "type": "string",
      "default": "#f5f5f5"
    },
    "frontBorderColor": {
      "type": "string",
      "default": ""
    },
    "frontBorderWidth": {
      "type": "number",
      "default": null
    },
    "backBorderColor": {
      "type": "string",
      "default": ""
    },
    "backBorderWidth": {
      "type": "number",
      "default": null
    },
    "borderRadius": {
      "type": "number",
      "default": 8
    },
    "padding": {
      "type": "number",
      "default": 20
    },
    "shadowIntensity": {
      "type": "number",
      "default": 0.1
    }
  }
}
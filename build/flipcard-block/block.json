{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "create-block/flipcard-block",
  "version": "0.1.0",
  "title": "Flip Card (Plus)",
  "category": "adaire-blocks-plus",
  "icon": "<svg width=\"24\" height=\"24\" viewBox=\"0 0 24 24\" fill=\"none\" xmlns=\"http://www.w3.org/2000/svg\">\r\n<g clip-path=\"url(#clip0_77_2)\">\r\n<rect width=\"24\" height=\"24\" rx=\"5\" fill=\"#D52940\"/>\r\n<g clip-path=\"url(#clip1_77_2)\">\r\n<rect x=\"3.5\" y=\"3.5\" width=\"11\" height=\"13\" stroke=\"white\"/>\r\n<rect x=\"9.5\" y=\"8.5\" width=\"11\" height=\"13\" stroke=\"white\"/>\r\n</g>\r\n</g>\r\n<defs>\r\n<clipPath id=\"clip0_77_2\">\r\n<rect width=\"24\" height=\"24\" rx=\"5\" fill=\"white\"/>\r\n</clipPath>\r\n<clipPath id=\"clip1_77_2\">\r\n<rect width=\"24\" height=\"24\" fill=\"white\"/>\r\n</clipPath>\r\n</defs>\r\n</svg>",
  "description": "A card that flips on hover, allowing you to add blocks on both the front and back sides.",
  "example": {},
  "supports": {
    "html": false,
    "anchor": true,
    "customClassName": true,
    "align": [
      "wide",
      "full"
    ]
  },
  "textdomain": "flipcard-block",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "attributes": {
    "blockId": {
      "type": "string",
      "default": ""
    },
    "width": {
      "type": "object",
      "default": {
        "desktop": {
          "value": 300,
          "unit": "px"
        },
        "tablet": {
          "value": 100,
          "unit": "%"
        },
        "mobile": {
          "value": 100,
          "unit": "%"
        }
      }
    },
    "height": {
      "type": "object",
      "default": {
        "desktop": {
          "value": 300,
          "unit": "px"
        },
        "tablet": {
          "value": 300,
          "unit": "px"
        },
        "mobile": {
          "value": 250,
          "unit": "px"
        }
      }
    },
    "flipDirection": {
      "type": "string",
      "default": "horizontal"
    },
    "animationDuration": {
      "type": "number",
      "default": 0.6
    },
    "animationEasing": {
      "type": "string",
      "default": "ease-in-out"
    },
    "frontBackgroundColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "backBackgroundColor": {
      "type": "string",
      "default": "#f5f5f5"
    },
    "frontBorderColor": {
      "type": "string",
      "default": ""
    },
    "frontBorderWidth": {
      "type": "number",
      "default": null
    },
    "backBorderColor": {
      "type": "string",
      "default": ""
    },
    "backBorderWidth": {
      "type": "number",
      "default": null
    },
    "borderRadius": {
      "type": "number",
      "default": 8
    },
    "padding": {
      "type": "number",
      "default": 20
    },
    "shadowIntensity": {
      "type": "number",
      "default": 0.1
    }
  }
}